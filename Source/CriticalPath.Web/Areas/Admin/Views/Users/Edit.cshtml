@using CriticalPath.Web.Areas.Admin.Models
@using CriticalPath.Data.Resources
@model UserAdminVM

@{
    ViewBag.Title = ActionStrings.Edit;
}

<h2>@ActionStrings.Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(m => m.UserName)

        <div class="form-group">
            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-lg-2 col-md-3 col-sm-3" })
            <div class="col-lg-5 col-md-6 col-sm-7 fontSize150pc">
                @Model.UserName
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-lg-2 col-md-3 col-sm-3" })
            <div class="col-lg-5 col-md-6 col-sm-7">
                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-lg-2 col-md-3 col-sm-3" })
            <div class="col-lg-5 col-md-6 col-sm-7">
                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-lg-2 col-md-3 col-sm-3" })
            <div class="col-lg-5 col-md-6 col-sm-7">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsUserAdmin, htmlAttributes: new { @class = "control-label col-lg-2 col-md-3 col-sm-3 col-xs-4" })
            <div class="col-xs-4">
                <div class="checkbox ml20">
                    @Html.EditorFor(model => model.IsUserAdmin)
                    @Html.ValidationMessageFor(model => model.IsUserAdmin, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsUserSupervisor, htmlAttributes: new { @class = "control-label col-lg-2 col-md-3 col-sm-3 col-xs-4" })
            <div class="col-xs-4">
                <div class="checkbox ml20">
                    @Html.EditorFor(model => model.IsUserSupervisor)
                    @Html.ValidationMessageFor(model => model.IsUserSupervisor, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsUserClerk, htmlAttributes: new { @class = "control-label col-lg-2 col-md-3 col-sm-3 col-xs-4" })
            <div class="col-xs-4">
                <div class="checkbox ml20">
                    @Html.EditorFor(model => model.IsUserClerk)
                    @Html.ValidationMessageFor(model => model.IsUserClerk, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsUserObserver, htmlAttributes: new { @class = "control-label col-lg-2 col-md-3 col-sm-3 col-xs-4" })
            <div class="col-xs-4">
                <div class="checkbox ml20">
                    @Html.EditorFor(model => model.IsUserObserver)
                    @Html.ValidationMessageFor(model => model.IsUserObserver, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsUserSupplier, htmlAttributes: new { @class = "control-label col-lg-2 col-md-3 col-sm-3 col-xs-4" })
            <div class="col-xs-4">
                <div class="checkbox ml20">
                    @Html.EditorFor(model => model.IsUserSupplier)
                    @Html.ValidationMessageFor(model => model.IsUserSupplier, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        @Html.Partial("_SaveButtonsPartial")
    </div>
}

@using CP.i8n
@using CriticalPath.Web.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Critical Path Admin Panel</title>
    @Styles.Render(AppSettings.SelectedTheme)
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(CommonStrings.Home, "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            @CommonStrings.Settings<b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink(@EntityStrings.SizingStandards, "Index", "SizingStandards")</li>
                            <li>@Html.ActionLink(@EntityStrings.CreateSizingStandard, "Create", "SizingStandards")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink(@EntityStrings.ProcessTemplates, "Index", "ProcessTemplates")</li>
                            <li>@Html.ActionLink(@EntityStrings.CreateProcessTemplate, "Create", "ProcessTemplates")</li>
                            <li class="divider"></li>
                            <li><a href="#">@CommonStrings.ApplicationSettings</a></li>
                            <li>@Html.ActionLink(CommonStrings.Setup, "Index", "Setup")</li>
                            <li>@Html.ActionLink("Application Theme", "SelectTheme", "AppSettings")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink(CommonStrings.Users, "Index", "Users")</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Critical Path Admin Panel</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @RenderSection("bottom", required: false)
</body>
</html>
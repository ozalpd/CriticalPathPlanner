@using CriticalPath.Web.Models
@using CriticalPath.Data
@using CriticalPath.Data.Resources
@model IEnumerable<ProductCategory>
@{
    ViewBag.Title = @EntityStrings.ProductCategories;

    //Authorization Flags
    bool canUserEdit = ViewBag.canUserEdit;
    bool canUserCreate = ViewBag.canUserCreate;
    bool canUserDelete = ViewBag.canUserDelete;

    //Records & Pager
    int pageNr = ViewBag.pageNr;
    int totalCount = ViewBag.totalCount;
    int pageSize = ViewBag.pageSize;
    int pageCount = ViewBag.pageCount;
}
<div class="row well">
    <div class="col-md-8">
        <h4>@EntityStrings.ProductCategories</h4>
    </div>
    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "searchForm" }))
    {
        @Html.Hidden("pageNr", pageNr)
        <div class="col-md-4">
            <div class="input-group">
                @Html.TextBox("SearchString", null, new { @class = "form-control" })
                <span class="input-group-btn">
                    <button type="button" class="btn btn-default" onclick="setPager(1)">
                        <span class="glyphicon glyphicon-search"></span>
                    </button>
                </span>
            </div>
        </div>
    }
</div>
@if (totalCount > 0)
{
    <table class="table table-hover">
        <tr>
            <th>@ActionStrings.Action</th>
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th>@Html.DisplayNameFor(model => model.Code)</th>
            <th>@Html.DisplayNameFor(model => model.ParentCategory)</th>
            <th>@Html.DisplayNameFor(model => model.SubCategories)</th>
            <th>@Html.DisplayNameFor(model => model.Products)</th>
        </tr>
    @foreach (var item in Model)
    {
            int subCategoriesCount = item.SubCategories.Count;
            int productsCount = item.Products.Count;
            bool canDelete = canUserDelete && (subCategoriesCount + productsCount + 0) == 0;
            <tr>
                <td>
                    <div class="btn-group">
                        <button type="button" title="@ActionStrings.Action" class="btn btn-xs btn-default dropdown-toggle" data-toggle="dropdown">
                            <span class="glyphicon glyphicon-tasks"></span> <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink(ActionStrings.Details, "Details", new { id = item.Id })</li>
                            @if (canUserEdit)
                            {
                                <li>@Html.ActionLink(ActionStrings.Edit, "Edit", new { id = item.Id })</li>
                            }
                            @if (canDelete)
                            {
                                <li>
                                    <a href="#deleteConfirm" data-toggle="modal" onclick="setDelete('<b>@(item.Title)</b>', @item.Id);">
                                        @ActionStrings.Delete
                                    </a>
                                </li>
                            }
                            else if (canUserDelete)
                            {
                                string cannotDelete = string.Format("SubCategories: {0}<br/>Products: {1}<br/>", subCategoriesCount , productsCount );
                                <li>
                                    <a onclick="showCannotDelete('<b>@(item.Title)</b>', '@cannotDelete');">
                                        @ActionStrings.Delete
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </td>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Code)</td>
                <td>@Html.DisplayFor(modelItem => item.ParentCategory)</td>
                <td>@subCategoriesCount</td>
                <td>@productsCount</td>
            </tr>
    }
    </table>
    @Html.Partial("_PagerPartial")
    @Html.Partial("_MessageBoxPartial")
}
else
{
    <h4>@MessageStrings.NoResults!</h4>
}
@section scripts{
    @Html.Partial("_IndexScriptsPartial", "ProductCategories")
}
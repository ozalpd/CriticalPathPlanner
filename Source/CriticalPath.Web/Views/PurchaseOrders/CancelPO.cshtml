@using CriticalPath.Data;
@using CP.i8n;
@using CriticalPath.Web.Models;
@model CriticalPath.Web.Models.PurchaseOrderCancelVM

@{
    ViewBag.Title = CommonStrings.CancelPurchaseOrder;
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>@CommonStrings.CancelPurchaseOrder</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.Partial("PartialDetails")

        <div class="form-group">
            @Html.LabelFor(model => model.CancellationReason, htmlAttributes: new { @class = "control-label col-lg-2 col-md-3 col-sm-3" })
            <div class="col-lg-5 col-md-6 col-sm-7">
                @Html.EditorFor(model => model.CancellationReason, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CancellationReason, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Cancelled, htmlAttributes: new { @class = "control-label col-lg-2 col-md-3 col-sm-3" })
            <div class="col-lg-5 col-md-6 col-sm-7 mt5">
                    @Html.EditorFor(model => model.Cancelled)
                    @Html.ValidationMessageFor(model => model.Cancelled, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <div class="col-sm-6 col-md-offset-2 col-sm-offset-3">
                @Html.ActionLink(@ActionStrings.BackToIndex, "Index", null, new { @class = "btn btn-default" })
                <input type="submit" value='@ActionStrings.CancelPO' class="btn btn-danger" />
            </div>
        </div>
    </div>
}
@using CriticalPath.Web.Models
@using CriticalPath.Data
@using CP.i8n
@model PurchaseOrderVM

<div class="row">
    <label class="control-label col-md-2 col-sm-3 mb5">
        @Html.DisplayNameFor(model => model.SizingStandard)
    </label>
    <div class="col-sm-9 fontSize125pc mt10">
        @Model.SizingStandard.Title
    </div>
</div>
<div class="row mt20">
    <label class="control-label col-md-2 col-sm-3 mb5">
        @Html.DisplayNameFor(model => model.SizeRatios)
    </label>
    <div class="col-lg-8 col-md-9 col-sm-9 fontSize125pc">
        @foreach (var rate in Model.SizeRatios.OrderBy(s => s.DisplayOrder))
        {
            <div class="col-xs-2 col-sm-2 col-md-1 pl5 pr5">
                <div class="shadedRoundCaption" style="width:100%;">
                    <div class="shadedRoundCaption">@rate.Caption</div>
                    <div class="shadedCaptionsNumber">@rate.Rate</div>
                </div>
            </div>
        }
        <div class="col-xs-1 mr4">&nbsp;</div>
        <div class="col-xs-3 shadedRoundCaption fontSize125pc mt10">
            @Html.DisplayFor(m => m.SizeRatioDivisor)
        </div>
    </div>
</div>
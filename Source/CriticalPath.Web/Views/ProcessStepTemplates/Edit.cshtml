@using CriticalPath.Web.Models
@using CriticalPath.Data
@using CriticalPath.Data.Resources
@model ProcessStepTemplate
@{
    ViewBag.Title = EntityStrings.EditProcessStepTemplate;
}

<h2>@EntityStrings.ProcessStepTemplate</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)
        
        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.DisplayOrder, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.DisplayOrder, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.DisplayOrder, "", new { @class = "text-danger" })
            </div>
        </div>
        @Html.HiddenFor(m => m.ProcessTemplateId)
    @Html.Partial("_SaveButtonsPartial")
</div>
}

@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}

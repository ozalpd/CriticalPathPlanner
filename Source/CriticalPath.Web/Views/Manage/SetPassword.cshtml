@model OzzIdentity.Models.SetPasswordViewModel
@{
    ViewBag.Title = OzzIdentity.Resources.TitleStrings.SetPassword;
}
<div class="row">
    <div class="col-lg-offset-1 col-sm-9 col-md-8 col-lg-7">
        <h2 class="col-sm-offset-4">@ViewBag.Title.</h2>

        <p class="text-info col-sm-offset-4">
            You do not have a local username/password for this site. Add a local
            account so you can log in without an external login.
        </p>

        @using (Html.BeginForm("SetPassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <h4 class="col-sm-offset-4">Create Local Login</h4>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.NewPassword, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-8">
                    <input type="submit" value='@OzzIdentity.Resources.TitleStrings.SetPassword' class="btn btn-default" />
                </div>
            </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
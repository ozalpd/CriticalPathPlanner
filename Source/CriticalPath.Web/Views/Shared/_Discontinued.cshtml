@using CriticalPath.Web.Models
@using CP.i8n
@model DiscontinuedVM

<div class="form-group">
    @Html.LabelFor(model => model.Discontinued, htmlAttributes: new { @class = "control-label col-lg-2 col-md-3 col-sm-3" })
    <div class="col-lg-5 col-md-6 col-sm-7">
        @Html.EditorFor(m => m.Discontinued, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.Discontinued, "", new { @class = "text-danger" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(model => model.DiscontinueDate, htmlAttributes: new { @class = "control-label col-lg-2 col-md-3 col-sm-3" })
    <div class="col-lg-6 col-md-7 col-sm-8">
        @Html.EditorFor(m => m.DiscontinueDate, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.DiscontinueDate, "", new { @class = "text-danger" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(model => model.DiscontinueNotes, htmlAttributes: new { @class = "control-label col-lg-2 col-md-3 col-sm-3" })
    <div class="col-lg-5 col-md-6 col-sm-7">
        @Html.TextAreaFor(m => m.DiscontinueNotes, new { @class = "form-control", autocomplete = "off" })
        @Html.ValidationMessageFor(m => m.DiscontinueNotes, "", new { @class = "text-danger" })
    </div>
</div>

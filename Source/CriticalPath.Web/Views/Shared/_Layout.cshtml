@using CriticalPath.Data.Resources
@using CriticalPath.Web.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Critical Path Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Critical Path", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink(CommonStrings.Home, "Index", "Home")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            @EntityStrings.Products<b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink(@EntityStrings.Products, "Index", "Products")</li>
                            <li>@Html.ActionLink(@EntityStrings.CreateProduct, "Create", "Products")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink(@EntityStrings.ProductCategories, "Index", "ProductCategories")</li>
                            <li>@Html.ActionLink(@EntityStrings.CreateProductCategory, "Create", "ProductCategories")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            @EntityStrings.PuchaseOrders<b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink(@EntityStrings.PuchaseOrders, "Index", "PuchaseOrders")</li>
                            <li>@Html.ActionLink(@EntityStrings.CreatePuchaseOrder, "Create", "PuchaseOrders")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink(@EntityStrings.Customers, "Index", "Customers")</li>
                            <li>@Html.ActionLink(@EntityStrings.CreateCustomer, "Create", "Customers")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink(@EntityStrings.Suppliers, "Index", "Suppliers")</li>
                            <li>@Html.ActionLink(@EntityStrings.CreateSupplier, "Create", "Suppliers")</li>
                        </ul>
                    </li>
                    @if (User.IsInRole(SecurityRoles.Admin))
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                @CommonStrings.Admin<b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink(@EntityStrings.ProcessTemplates, "Index", "ProcessTemplates")</li>
                                <li>@Html.ActionLink(@EntityStrings.CreateProcessTemplate, "Create", "ProcessTemplates")</li>
                            </ul>
                        </li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Critical Path Application</p>
        </footer>
    </div>
</body>
</html>
